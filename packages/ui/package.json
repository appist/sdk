{
  "name": "@appist/ui",
  "description": "A modern UI library built with Qwik/UnoCSS.",
  "version": "0.0.3",
  "private": false,
  "type": "module",
  "license": "MIT",
  "main": "./lib/index.qwik.mjs",
  "qwik": "./lib/index.qwik.mjs",
  "types": "./lib-types/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.qwik.mjs",
      "require": "./lib/index.qwik.cjs",
      "types": "./lib-types/index.d.ts"
    }
  },
  "files": [
    "lib",
    "lib-types"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "pnpm run build.types && qwik build",
    "build.lib": "vite build --mode lib",
    "build.types": "tsc --emitDeclarationOnly",
    "clean": "app rm lib,lib-types,*.tsbuildinfo",
    "dev": "nodemon -w src -e 'ts tsx' -q --exec 'pnpm run build'",
    "prerelease": "pnpm clean && pnpm build",
    "release": "npm publish --access=public",
    "test": "vitest --passWithNoTests"
  },
  "devDependencies": {
    "@appist/cli": "workspace:*",
    "@builder.io/qwik": "^0.14.1",
    "@builder.io/qwik-city": "^0.0.127",
    "@types/node": "^18.11.9",
    "node-fetch": "^3.3.0",
    "nodemon": "^2.0.20",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.4",
    "vite": "^3.2.4",
    "vite-tsconfig-paths": "^3.6.0",
    "vitest": "^0.25.3"
  }
}
